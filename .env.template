# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/codetector

# Authentication (Clerk)
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# GitHub App Configuration
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY_BASE64=your_base64_encoded_private_key
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# CRITICAL SECURITY: AI Service Configuration
# NEVER commit this key to version control
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# E2B Sandbox Configuration
E2B_API_KEY=your_e2b_api_key
E2B_SANDBOX_TEMPLATE=gh622yvblp3exdpk9tya

# Security Configuration
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
PORT=3000

# Redis Configuration (for analysis streaming)
REDIS_URL=redis://localhost:6379

# Session Configuration
SESSION_SECRET=your_very_long_random_session_secret_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ANALYSIS_RATE_LIMIT_MAX=10

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# HTTPS Configuration (Production)
FORCE_HTTPS=false
HTTPS_PORT=443

# Additional Security Headers
CSP_REPORT_URI=https://your-domain.com/csp-report
SECURITY_HEADERS_ENABLED=true